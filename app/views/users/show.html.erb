<p>
  <strong>Nom :</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email :</strong>
  <%= @user.email%>
</p>

<p>
  <strong>Téléphone :</strong>
  <%= @user.phone %>
</p>

<p>
  <%= button_to 'Modifier', edit_user_path(@user), method: :get %>
  <% if current_user.admin? %>
    <%= button_to 'Supprimer', @user, method: :delete, data: { confirm: 'Voulez-vous vraiment supprimer cet utilisateur ?' } %>
    <%= button_to 'Liste des utilisateurs', users_path, method: :get %>
  <% end %>
  <%= button_to 'Page d\'accueil', root_path, method: :get%>
</p>
